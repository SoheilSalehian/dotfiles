function! StrTrim(txt)
  return substitute(a:txt, '^\n*\s*\(.\{-}\)\n*\s*$', '\1', '')
endfunction

let b:syntastic_javascript_eslint_exec = StrTrim(system('npm-which eslint'))
let g:eslint_onwrite = 1

